{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "module": "nodenext",
    "target": "es2022",
    "allowJs": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2020"
    ]
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "plugin",
    "plugin-tasks"
  ]
}
