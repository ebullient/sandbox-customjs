{
  "name": "customjs",
  "version": "0.1",
  "description": "Test scripts",
  "private": true,
  "scripts": {
    "prebuild:customjs": "npx @biomejs/biome check ./src",
    "build:customjs": "tsc",
    "prebuild:plugin": "npx @biomejs/biome check ./plugin/src",
    "build:plugin": "node ./plugin/esbuild.config.mjs production",
    "prebuild:plugin-tasks": "npx @biomejs/biome check ./plugin-tasks/src",
    "build:plugin-tasks": "node ./plugin-tasks/esbuild.config.mjs production",
    "prebuild": "npm run prebuild:plugin && npm run prebuild:plugin-tasks && npm run prebuild:customjs",
    "build": "npm run build:plugin && npm run build:plugin-tasks && npm run build:customjs",
    "fix": "npx @biomejs/biome check --write",
    "format": "npx @biomejs/biome format",
    "lint": "npx @biomejs/biome lint",
    "dev:customjs": "tsc -w & node ./build/build-dev.mjs watch",
    "dev:plugin": "node ./plugin/esbuild.config.mjs",
    "dev:plugin-tasks": "node ./plugin-tasks/esbuild.config.mjs",
    "dev": "npm run dev:plugin & npm run dev:plugin-tasks & node ./build/build-dev.mjs dev",
    "push": "node ./build/build-dev.mjs"
  },
  "keywords": [],
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/codemirror": "5.60.16",
    "@types/node": "^24.7.2",
    "builtin-modules": "^5.0.0",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.2",
    "esbuild": "^0.25.10",
    "moment": "^2.30.1",
    "obsidian": "^1.10.0",
    "tslib": "^2.8.1",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "esbuild-plugin-tsc": "^0.5.0"
  }
}
